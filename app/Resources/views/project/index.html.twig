{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">

        <h1 class="text-primary text-center">Projects list</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Username</th>
                <th>Link</th>
                <th class="text-danger">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td><a href="{{ path('projects_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>{% if project.date %}{{ project.date|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ project.username }}</td>
                    <td><a href="{{ project.link }}" target="_blank">{{ project.link }}</a></td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('projects_show', { 'id': project.id }) }}" class="btn btn-success btn-sm">show</a>
                            <a href="{{ path('projects_edit', { 'id': project.id }) }}" class="btn btn-warning btn-sm">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('projects_new') }}" class="btn btn-primary btn-lg">Create a new project</a>
        </div>


    </div>
{% endblock %}
